prepare:
  steps:
    - name: Installing the python dependencies.
      command: python3 -m venv env && source env/bin/activate && install -r requirements.txt
test:
  steps: []
run:
  steps:
  - name: Switch to the new python environment and boot up the FastAPI server.
    command: cd threadscape && python3 manage.py migrate && python3 manage.py runserver 0000:3000
