prepare:
  steps:
    - name: Installing the python dependencies.
      command: pipenv install -r requirements_old.txt
test:
  steps: []
run:
  steps:
  - name: Switch to the new python environment and boot up the FastAPI server.
    command: source "$(pipenv --venv)/bin/activate" && cd threadscape && python3 manage.py migrate && python3 manage.py runserver 0000:3000
